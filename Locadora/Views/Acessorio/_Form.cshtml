@model Locadora.Models.Acessorio

@Html.AntiForgeryToken()

<div class="form-group col-md-12" style="margin-bottom: 0px">
    <h4>Acessórios</h4>
    <hr class="my-4">
</div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.Descricao) <label style="color: red" title="Este campo é obrigatório">*</label>
    @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Descricao)
</div>

<div class="form-group col-md-6">
    @Html.LabelFor(m => m.PrecoDeCusto) <label style="color: red" title="Este campo é obrigatório">*</label>
    @Html.TextBoxFor(m => m.PrecoDeCusto, new { @class = "form-control money" })
    @Html.ValidationMessageFor(m => m.PrecoDeCusto)
</div>

<div class="form-group col-md-12">
    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light" onclick="javascript:void(0)">Salvar</button>
</div>